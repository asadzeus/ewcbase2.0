generator client {
    provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}

enum PostType {
    sell
    rent
}

model USER {
    id        Int      @id @default(autoincrement())
    email     String   @unique
    password  String
    name      String
    surname   String
    image     String?
    createdAt DateTime @default(now())
    posts     POST[]
}

model POST {
    postId      Int      @id @default(autoincrement())
    type        PostType @default(sell)
    address     String
    bedroom     Int
    bathroom    Int
    price       Int
    area        Int
    description String
    image       String
    lat         Float
    lon         Float
    createdAt   DateTime @default(now())

    ownerId Int
    owner   USER @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}
